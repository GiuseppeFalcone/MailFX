<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="475.0" prefWidth="519.0" xmlns="http://javafx.com/javafx/23.0.1"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.prog3.client.controller.LoginController">
    <padding>
        <Insets bottom="5.0" left="20.0" right="20.0" top="5.0"/>
    </padding>
    <AnchorPane prefHeight="223.0" prefWidth="479.0">
        <Label alignment="CENTER" layoutX="140.0" layoutY="14.0" prefHeight="23.0" prefWidth="201.0"
               text="Accedi alla tua mail!" textAlignment="CENTER">
            <font>
                <Font name="System Bold" size="18.0"/>
            </font>
        </Label>
        <Label alignment="CENTER" layoutX="183.0" layoutY="81.0" prefHeight="17.0" prefWidth="116.0"
               text="Inserisci la tua mail" textAlignment="CENTER"/>
        <TextField fx:id="userMailTxtField" layoutX="128.0" layoutY="112.0" prefHeight="25.0" prefWidth="222.0"
                   promptText="example@mail.com"/>
        <Button fx:id="loginBtn" layoutX="214.0" layoutY="152.0" mnemonicParsing="false"
                onAction="#handleLogInButtonClick" text="Log in"/>
        <Label fx:id="reinserisciMail" alignment="CENTER" layoutX="180.0" layoutY="191.0" prefHeight="17.0"
               prefWidth="116.0" text="Reinserisci Mail" textAlignment="CENTER" visible="false"/>
    </AnchorPane>
    <TextArea fx:id="emailRegex" editable="false" prefHeight="138.0" prefWidth="273.0"/>
</VBox>
